models/weapons/shotgun/shotgun_muzzflash
{
	sort			nearest
	deform			sprite
	{
		forceHighQuality
		if 		( time + parm4 ) * 6.4 < 1.0
		blend 		add
		map 		models/testweapons/xrealshotgun/shotgun_muzzflash_strip
		scale 		1 / 32 , 1
		scroll 		q2table32[ (time + parm4) * 6.4] , 0
		rotate		q2rotate90[ parm5 ]
		clamp
	}
}

